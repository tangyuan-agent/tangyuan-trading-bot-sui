# Sui Blockchain
SUI_NETWORK=mainnet # mainnet | testnet | devnet
SUI_RPC_URL=https://fullnode.mainnet.sui.io:443
SUI_RPC_FALLBACK=https://sui-mainnet.nodeinfra.com

# Wallet (will be encrypted)
WALLET_PASSWORD=your-strong-password-here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_ADMIN_ID=your-telegram-user-id

# Database
DB_PATH=~/.tangyuan/data.db

# Backup
CLOUDFLARE_R2_ACCOUNT_ID=
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_SECRET_ACCESS_KEY=
CLOUDFLARE_R2_BUCKET=tangyuan-backups

GITHUB_TOKEN=
GITHUB_REPO=your-username/tangyuan-bot-data

# Logging
LOG_LEVEL=info # debug | info | warn | error
LOG_DIR=~/.tangyuan/logs

# Strategy Configuration
CONFIG_FILE=./config/strategies.json
